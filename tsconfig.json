{
	"extends": "@tsconfig/node12/tsconfig.json",
	"compilerOptions": {
		/* Visit https://aka.ms/tsconfig.json to read more about this file */
		"target": "es5",
		"module": "commonjs",
		"allowJs": true,
		"outDir": "./dist",
		"strict": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": "lib"
	},

	"include": ["lib/**/*.ts"],
	"exclude": ["node_modules", "lib/**/*.spec.ts", "dist"]
}
